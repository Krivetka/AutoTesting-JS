{
  "name": "autotesting-js",
  "version": "1.0.0",
  "description": "Automated testing with Playwright",
  "scripts": {
    "test": "playwright test",
    "test:chrome": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:hd": "VIEWPORT_WIDTH=1920 VIEWPORT_HEIGHT=1080 npx playwright test",
    "test:sd": "VIEWPORT_WIDTH=1366 VIEWPORT_HEIGHT=768 npx playwright test",
    "test:parallel": "npx playwright test --workers 2",
    "test:alerts": "runThis=Alerts npx playwright test",
    "test:form": "runThis=Form npx playwright test",
    "test:textbox": "runThis=Text npx playwright test",
    "test:tooltips": "runThis=Tooltips npx playwright test",
    "test:select": "runThis=Select npx playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  }
}

